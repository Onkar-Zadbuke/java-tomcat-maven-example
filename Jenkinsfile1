pipeline {
    agent any
    stages {
        stage ('Initialize') {
            steps {
                 echo 'Initialize the code file'
                
                }
            } 
              
              stage('Build') {
                 steps {
                      echo 'Hello World'
                      
                    }  
                }
            
                stage('Deploy') {
                 steps {
                      echo 'Deployed an Artifact'
                      
                    }  
                }
            }
        }    